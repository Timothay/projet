{% extends 'base.html.twig' %}


{% block stylesheets %}
    <link href="{{ asset('assets/auth.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="formulaire">
    <div id="titleauth">
    <h1> Inscription </h1>
    <h4> Inscrivez vous avec votre adresse CESI </h4>
    </div>
    {{ form_start(form) }}
    {{ form_row(form.nom, {'attr':{'placeholder': 'Nom'}}) }}
    {{ form_row(form.prenom, {'attr':{'placeholder': 'Prenom'}}) }}
    {{ form_row(form.centre, {'attr':{'placeholder': 'Centre'}}) }}
    {{ form_row(form.mail, {'attr':{'placeholder': 'Mail'}}) }}
    {{ form_row(form.password, {'label':'Mot de passe','attr':{'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label':'Confirmer le mot de passe','attr':{'placeholder': 'Confirmer le mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
        </div>
{% endblock %}