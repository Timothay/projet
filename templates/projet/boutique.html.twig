{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('assets/boutique.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
  <!-- Display the "add a product" button if "membre BDE" only -->
  {% if app.session.get('role') == 2 %}
    <a href="/ajouter" class="btn btn-primary add-product">Ajouter un produit</a>
  {% endif %}
  <!--  -->

<!-- Research bar -->  
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
<!--  -->

<!-- Carousel with 3 best products -->
<div id="carousel_exemple" class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="{{products[0].image}}" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
        <h1>{{products[0].name}}</h1>
        <p>Top des ventes</p>
      </div>
    </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="{{products[1].image}}" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
        <h1>{{products[1].name}}</h1>
        <p>Top des ventes</p>
      </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="{{products[2].image}}" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
        <h1>{{products[2].name}}</h1>
        <p>Top des ventes</p>
      </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!--  -->

<!-- Each card of product's pattern... -->
<div class="row m-5">
  <!-- ...with a number of cards equal to the number of products in the DataBase -->
  {% for product in products %}
    <table class="product_table mb-3">
      <tr>
        <td><div class="col">
          <div class="p-5 border-right bg-light">
            <div class="card container-fluid" style="width: 30rem;">
              <img class="card-img-top" src="{{product.image}}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{product.name}}</h5>
                <p class="card-text">{{product.price}}â‚¬</p>
                {% if app.session.get('role') == 2 %}
                <a href="/supprimer/{{product.id}}" class="btn btn-primary">Supprimer le produit</a>
                {% endif %}
                <a href="" class="nav-link">Ajouter au Panier</a>
              </div>
            </div>
          </div>
        </div>
      </tr>    
    </table>
  {% endfor %} 
  <!--  -->
</div>
<!--  -->

{% endblock %}


{% block javascripts %}    

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="./assets/vendors/boutique.js"></script>

{% endblock %}
